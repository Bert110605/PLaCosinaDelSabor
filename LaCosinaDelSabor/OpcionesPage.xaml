<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaCosinaDelSabor.OpcionesPage">

    <StackLayout Padding="20">
        <Image Source="opciones.png"
               WidthRequest="200"
               HeightRequest="200"
               HorizontalOptions="Center"/>
        <Label Text="¿Qué deseas consultar?"
               FontSize="32"
               HorizontalOptions="Center"/>
        <Button Text="Empleados"
                Clicked="BtnEmpleados_Clicked"
                WidthRequest="150"
                Margin="5"
                BackgroundColor="Aqua"/>
        <Button Text="Menú"
                Clicked="BtnMenu_Clicked"
                WidthRequest="150"
                Margin="5"
                BackgroundColor="Aqua"/>
        <Button Text="Proveedores"
                Clicked="BtnVerProveedores_Clicked"
                WidthRequest="150"
                Margin="5"
                BackgroundColor="Aqua"/>
        <Button Text="Ingredientes"
                Clicked="BtnVerIngredientes_Clicked"
                WidthRequest="150"
                Margin="5"
                BackgroundColor="Aqua"/>
        <Button Text="Desperdicios"
                Clicked="BtnVerDesperdicios_Clicked"
                WidthRequest="150"
                Margin="5"
                BackgroundColor="Aqua"/>
    </StackLayout>
</ContentPage>
